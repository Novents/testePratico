            @Html.ActionLink("Editar", "Edit", new { id = Model.estabelecimentoID }, new { @class = "btn btn-default" })
        </div>
        <div class="col">
            @Html.ActionLink("Excluir", "Delete", new { id = Model.estabelecimentoID }, new { @class = "btn btn-danger" })
