@model TestePratico.Models.Estabelecimento

@{
    ViewBag.Title = "Teste Prático";
}

<div class="panel panel-primary">
    <h2 class="panel-heading">Edição Estabelecimento</h2>
    <p class="col-md-12">
        @Html.ActionLink("Voltar", "Details", new { id = Model.estabelecimentoID }, new { @class = "btn btn-default" })
    </p>


